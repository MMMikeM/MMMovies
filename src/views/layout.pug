  block content
    main.w-full
      .h-12.text-2xl.p-8= status
      if content
        form(action="/save" method="POST").w-full.flex.flex-row.flex-wrap.gap-4.justify-center.bg-gray-100
          .w-full
            button(type="submit" class="w-80 h-10 mt-4 mx-auto bg-gray-700 text-white ring-gray-900 ring-opacity-5 placeholder-gray-400 appearance-none text-lg font-semibold rounded-md block px-3 py-2 border border-transparent shadow ring-1 sm:text-sm mb-4 focus:border-teal-500 focus:ring-teal-500 focus:outline-none") 
              |     Submit
          each item in content
            .rounded-lg.overflow-hidden.shadow-lg.w-80.bg-white.relative
              img.w-full.rounded-t-lg(src=item.url)
              .flex.justify-between.p-6.flex-grow
                .text-xl.mb-2.font-semibold= item.title
                .absolute.bottom-4.right-4
                  input(value=item.movieId type="checkbox" name="movieIds[]" class="w-4 h-4")

